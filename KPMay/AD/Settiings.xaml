<Window x:Class="KPMay.Settiings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KPMay"
        mc:Ignorable="d"
        Title="Settiings" Height="450" Width="800">
    <Grid>
        <TabControl TabStripPlacement="Left">
            <TabItem Header="Пользователь" Margin="0,0,0,0" HorizontalContentAlignment="Stretch">
                <Grid Background="#FFE5E5E5">
                    <TextBox x:Name="tb_fio" HorizontalAlignment="Left" Height="25" Margin="27,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" local:TBHelper.Placeholder="ФИО"/>
                    <TextBox x:Name="tb_job_title" HorizontalAlignment="Left" Height="25" Margin="27,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
                    <TextBox x:Name="tb_enterprise" HorizontalAlignment="Left" Height="25" Margin="27,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
                    <Label Content="ФИО входящего" HorizontalAlignment="Left" Margin="27,57,0,0" VerticalAlignment="Top" Cursor=""/>
                    <Label Content="Должность" HorizontalAlignment="Left" Margin="27,118,0,0" VerticalAlignment="Top"/>
                    <Label Content="Организация" HorizontalAlignment="Left" Margin="27,180,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.603,2.426"/>
                    <Button x:Name="bt_save" Content="Сохранить" HorizontalAlignment="Left" Margin="29,255,0,0" VerticalAlignment="Top" Height="26" Width="80" Click="bt_save_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
